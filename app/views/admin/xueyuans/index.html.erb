<% content_for :breadcrumb do %>
<li>
  <i class="icon-home home-icon"></i>
  <a href="<%= home_path %>">首页</a>
</li>
<li class="active">学院管理</li>
<% end %>


<h1>学院管理</h1>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th>专业数</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @xueyuans.each do |xueyuan| %>
      <tr>
        <td><%= xueyuan.name %></td>
        <td><%= xueyuan.zhuanyes.count %></td>
        <td><%= link_to '浏览', admin_xueyuan_path(xueyuan) %></td>
        <td><%= link_to '编辑', edit_admin_xueyuan_path(xueyuan) %></td>
        <td><%= link_to '删除', admin_xueyuan_path(xueyuan), method: :delete, data: { confirm: '确认删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '添加学院', new_admin_xueyuan_path %>

<% content_for :script do %>
  <script>
    $(function(){
      $("#admin_xueyuan").addClass("active")
    })
  </script>
<% end %>