<% content_for :breadcrumb do %>
<li>
  <i class="icon-home home-icon"></i>
  <a href="<%= home_path %>">首页</a>
</li>
<li class="active">专业管理</li>
<% end %>

<div class="page-content">
  <div class="page-header">
    <h1>
      专业管理
      <small>
        <i class="icon-double-angle-right"></i>
        <%= link_to '添加专业', new_admin_zhuanye_path %>
      </small>
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">

    <table class="table">
      <thead>
        <tr>
          <th>名称</th>
          <th>所属学院</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @zhuanyes.each do |zhuanye| %>
          <tr>
            <td><%= zhuanye.name %></td>
            <td><%= zhuanye.xueyuan.name %></td>
            <td>
            <%= link_to '编辑', edit_admin_zhuanye_path(zhuanye) %>
            <%= link_to '删除', admin_zhuanye_path(zhuanye), method: :delete, data: { confirm: '确认删除吗?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @zhuanyes %>

    </div>
  </div>
</div>



<% content_for :script do %>
  <script>
    $(function(){
      $("#admin_zhuanye").addClass("active")
    })
  </script>
<% end %>