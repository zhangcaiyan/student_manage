<%= simple_form_for([:admin, @zhuanye]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :xueyuan_id, collection: Zhuanye.pluck(:id, :name), prompt: "请选择" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "保存" %>
  </div>
<% end %>
