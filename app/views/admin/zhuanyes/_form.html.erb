<%= simple_form_for([:admin, @zhuanye], wrapper: "default-form", html: {role: "form"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label_html: {class: "col-sm-2"} %>
    <%= f.input :xueyuan_id, collection: Xueyuan.pluck(:name, :id), prompt: "请选择", label_html: {class: "col-sm-2"} %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-md-10">
      <%= f.button :submit, "保存", class: "btn-primary" %>
    </div>
  </div>
<% end %>
