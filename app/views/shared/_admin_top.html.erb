<div class="navbar navbar-default" id="navbar">
  <script type="text/javascript">
    try{ace.settings.check('navbar' , 'fixed')}catch(e){}
  </script>

  <div class="navbar-container" id="navbar-container">
    <div class="navbar-header pull-left">
      <a href="<%= home_path %>" class="navbar-brand">
        <small>
          <i class="icon-leaf"></i>
          评优管理系统
        </small>
      </a><!-- /.brand -->
    </div><!-- /.navbar-header -->


    <ul class="nav navbar-nav">
      <li id="home_page">
        <%= link_to '首页', home_path %>
      </li>
      <li id="news_page" >
        <%= link_to '公告', news_index_path %>
      </li>
    </ul>


    <div class="navbar-header pull-right" role="navigation">
      <ul class="nav ace-nav">


        <li class="light-blue">
          <% if user_signed_in? %>
            <a data-toggle="dropdown" href="#" class="dropdown-toggle">
              <%= current_user.username %>
              <i class="icon-caret-down"></i>
            </a>

            <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
              <li>
              <% if current_user.admin? %>
                <%= link_to_icon 'icon-user', "后台管理", admin_home_path %>
              <% elsif current_user.student? %>
                <%= link_to_icon 'icon-user', "后台管理", student_home_path %>
              <% elsif current_user.xuegongchu? %>
                <%= link_to_icon 'icon-user', "后台管理", xuegongchu_home_path %>
              <% end %>
              </li>
              <li>
                <%= link_to_icon "icon-key", "修改密码", edit_user_registration_path %>
              </li>

              <li>
              <% if current_user.student? %>
                <%= link_to_icon 'icon-user', "修改用户信息", new_student_person_info_path %>
              <% end %>
              </li>

              <li class="divider"></li>
              <li>
                <%= link_to_icon "icon-off", '退出', destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          <% else %>
            <%= link_to '登录', new_user_session_path %>
          <% end %>
        </li>
      </ul><!-- /.ace-nav -->
    </div><!-- /.navbar-header -->
  </div><!-- /.container -->
</div>