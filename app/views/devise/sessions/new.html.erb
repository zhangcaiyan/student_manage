<body class="login-layout">
    <div class="main-container">
      <div class="main-content">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <div class="login-container">
              <div class="center">
                <h1>
                  <% if nil %>
                    <i class="icon-leaf green"></i>
                    <span class="red">Ace</span>
                  <% end %>
                  <span class="white">评优管理系统</span>
                </h1>
                <h4 class="blue">&copy; 登录</h4>
              </div>

              <div class="space-6"></div>

              <div class="position-relative">
                <div id="login-box" class="login-box visible widget-box no-border">
                  <div class="widget-body">
                    <div class="widget-main">
                    <% if alert %>
                      <div class="alert red">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">
                          <i class="fa fa-times-circle"></i>
                        </button>
                        <%= alert %>
                      </div>
                    <% end %>

                      <h4 class="header blue lighter bigger">
                        <i class="icon-coffee green"></i>
                        请输入您的账户
                      </h4>

                      <div class="space-6"></div>

                      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                        <fieldset>
                          <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                              <%= f.text_field :username, required: false, autofocus: true, class: "form-control", placeholder: "用户名" %>
                              <i class="icon-user"></i>
                            </span>
                          </label>

                          <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                              <%= f.password_field :password, required: false, class: "form-control", placeholder: "密码" %>
                              <i class="icon-lock"></i>
                            </span>
                          </label>

                          <div class="space"></div>

                          <div class="clearfix">
                            <label class="inline">
                              <%= f.check_box :remember_me, as: :boolean, class: "ace" if devise_mapping.rememberable? %>
                              <span class="lbl"> 记住密码</span>
                            </label>

                            <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                              <i class="icon-key"></i>
                              登录
                            </button>
                          </div>

                          <div class="space-4"></div>
                        </fieldset>
                      <% end %>




                    </div><!-- /widget-main -->


                  </div><!-- /widget-body -->
                </div><!-- /login-box -->




              </div><!-- /position-relative -->
            </div>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div>
    </div><!-- /.main-container -->

    <!-- basic scripts -->







