<%= simple_form_for([:student, @person_info], wrapper: "default-form", html: {role: "form"}) do |f| %>

  <div class="form-inputs">
    <%= f.input :name, label_html: {class: "col-sm-2"} %>
    <%= f.input :gender_id, collection: Dict::Gender.options, prompt: "请选择", label_html: {class: "col-sm-2"} %>
    <%= f.input :xuehao, label_html: {class: "col-sm-2"} %>
    <%= f.input :zhuanye_id, collection: Zhuanye.pluck(:name, :id), prompt: "请选择", label_html: {class: "col-sm-2"} %>
    <%= f.input :zhiwu, label_html: {class: "col-sm-2"} %>
    <%= f.input :minzu, label_html: {class: "col-sm-2"} %>
    <%= f.input :political_id, collection: Dict::Political.options, prompt: "请选择", label_html: {class: "col-sm-2"} %>
    <%= f.input :score_id, collection: Dict::Score.options, prompt: "请选择", label_html: {class: "col-sm-2"} %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-md-10">
      <%= f.button :submit, "保存", class: "btn-primary" %>
    </div>
  </div>
<% end %>
